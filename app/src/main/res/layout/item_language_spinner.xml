<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spinner_item_height"
    android:paddingHorizontal="@dimen/padding_half_normal"
    android:paddingVertical="@dimen/padding_quarter_normal">

    <ImageView
        android:id="@+id/ivLanguageItemIcon"
        android:layout_width="@dimen/language_icon_small"
        android:layout_height="@dimen/language_icon_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/language_icon_russia" />
    
    <TextView
        android:id="@+id/tvLanguageItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/ivLanguageItemIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivLanguageItemIcon"
        app:layout_constraintStart_toEndOf="@id/ivLanguageItemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/language_russian" />

</androidx.constraintlayout.widget.ConstraintLayout>