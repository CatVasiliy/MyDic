<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/ivLanguageItemIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/language_icon_russia" />
    
    <TextView
        android:id="@+id/tvLanguageItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/ivLanguageItemIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivLanguageItemIcon"
        app:layout_constraintStart_toEndOf="@id/ivLanguageItemIcon"
        tools:text="@string/language_russian" />

</androidx.constraintlayout.widget.ConstraintLayout>