<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/translation_sending">

        <SwitchPreferenceCompat
            android:key="sendTranslations"
            android:title="@string/send_translations"
            android:summary="@string/send_translations_summary"
            android:persistent="false" />

        <ListPreference
            android:key="sendingInterval"
            android:title="@string/sending_interval"
            android:persistent="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>